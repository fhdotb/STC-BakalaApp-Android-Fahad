<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sa.com.stc.SimRegister"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" /> 
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <receiver android:name="sa.com.stc.SimRegister.SmsReceiver">
  			 <intent-filter android:priority="999" android:exported="true">
  			    <action android:name="android.provider.Telephony.SMS_RECEIVED" />
   			</intent-filter>
		</receiver>
        
        <activity
            android:name="sa.com.stc.SimRegister.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sa.com.stc.SimRegister.InputFormActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.INPUT_FORM" />
            </intent-filter>
        </activity>
        <activity
            android:name="sa.com.stc.SimRegister.SimRegisterActivity"
            android:screenOrientation="portrait" 
            >
            
        </activity>
        <activity
            android:name="sa.com.stc.SimRegister.ZiyarahMainActivity"
            android:screenOrientation="portrait" 
            >
            
        </activity>
        <activity android:name=".ImageClass"
                  android:configChanges="orientation"
                  android:screenOrientation="portrait">

        </activity>
        <activity android:name=".StateQuery">
            <intent-filter>
                <action android:name="android.intent.action.STATE_Q" />

            </intent-filter>
        </activity>
    </application>

</manifest>